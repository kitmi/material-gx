{
    "settings": {
        "cli": {
            "general": {
                "consoleEnabled": true,
                "consoleLogLevel": "verbose",
                "consoleLogColorize": true,
                "fileLogEnabled": true,
                "fileLogLevel": "verbose",
                "fileLogFilename": "mowa-cli.log",
                "fileLogOverwrite": true,
                "verbose": true
            }
        }
